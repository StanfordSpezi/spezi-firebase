{
  "name": "spezi-firebase-remote-notifications",
  "version": "0.1.0",
  "license": "MIT",
  "description": "Stanford Biodesign Digital Health Spezi FRN Package",
  "keywords": [
    "Stanford",
    "Firebase",
    "Biodesign"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/StanfordSpezi/spezi-firebase.git"
  },
  "private": true,
  "scripts": {
    "dev": "npm --prefix packages/spezi-frn run watch",
    "prebuild": "npm --prefix packages/spezi-frn run build",
    "build": "npm --prefix packages/spezi-frn run build",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix & prettier --write .",
    "lint:ci": "npm run prebuild && eslint --output-file eslint_report.json --format json .",
    "pretest": "npm --prefix packages/spezi-frn run build",
    "test": "npm run test:utils && npm run test:remote-notifications",
    "test:remote-notifications": "npm --prefix packages/spezi-frn run test",
    "test:utils": "npm --prefix packages/spezi-firebase-utils run test",
    "docs": "typedoc",
    "docs:ci": "typedoc --out ./out/docs --githubPages true"
  },
  "dependencies": {
    "@stanfordbdhg/spezi-firebase-remote-notifications": "file:./packages/spezi-frn"
  },
  "devDependencies": {
    "@babel/core": "^7.27.1",
    "@babel/preset-env": "^7.27.2",
    "@babel/preset-typescript": "^7.27.1",
    "@testing-library/jest-dom": "^6",
    "@testing-library/react": "^15",
    "@total-typescript/ts-reset": "^0.5.1",
    "@types/chai": "^5.2.2",
    "@types/jest": "^29",
    "@types/node": "^20",
    "@typescript-eslint/eslint-plugin": "^7",
    "@typescript-eslint/parser": "^7",
    "babel-jest": "^29.7.0",
    "concurrently": "^8",
    "eslint": "^8",
    "eslint-config-prettier": "^9",
    "eslint-plugin-import": "^2",
    "eslint-plugin-prettier": "^5",
    "jest": "^29",
    "jest-environment-jsdom": "^29",
    "prettier": "^3",
    "ts-jest": "^29",
    "ts-node": "^10.9.2",
    "typedoc": "^0.25",
    "typescript": "^5"
  }
}
