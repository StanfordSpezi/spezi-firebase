{
  "name": "fhir-zod-schema-generator",
  "version": "1.0.0",
  "description": "Script to generate Zod schemas from FHIR TypeScript definitions using ts-to-zod",
  "type": "module",
  "scripts": {
    "generate": "node generate-schemas.js",
    "generate:patient": "node generate-schemas.js --resource Patient",
    "generate:observation": "node generate-schemas.js --resource Observation"
  },
  "dependencies": {
    "@types/fhir": "^0.0.41",
    "ts-to-zod": "^3.13.0",
    "typescript": "^5.0.0",
    "zod": "^4.0.5"
  },
  "devDependencies": {
    "@types/node": "^20.0.0"
  }
}
