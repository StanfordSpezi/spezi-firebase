{
  "compilerOptions": {
    "composite": true,
    "target": "es2020",
    "lib": ["es2020"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": false,
    "esModuleInterop": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "**/lib/**"],
  "typedocOptions": {
    "entryPoints": ["packages/*"],
    "name": "Stanford Biodesign Digital Health Spezi Firebase",
    "entryPointStrategy": "packages",
    "includeVersion": false
  }
}
