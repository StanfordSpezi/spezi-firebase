{
  "compilerOptions": {
    "target": "es2020",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "declaration": true,
    "outDir": "lib",
    "rootDir": "src",
    "skipLibCheck": true,
    "isolatedModules": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "paths": {
      "spezi-firebase-utils": ["../spezi-firebase-utils"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "lib", "test"]
}
