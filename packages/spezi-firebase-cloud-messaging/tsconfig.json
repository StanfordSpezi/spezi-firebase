{
  "compilerOptions": {
    "target": "es2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "strict": true,
    "declaration": true,
    "outDir": "lib",
    "rootDir": "src",
    "skipLibCheck": true,
    "isolatedModules": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "paths": {
      "@stanfordspezi/spezi-firebase-utils": ["../spezi-firebase-utils/src"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "lib", "test"]
}
